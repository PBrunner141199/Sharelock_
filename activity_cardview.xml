<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:andoroid="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rechteck">

        <Button
            android:id="@+id/AngebotNachfragePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="228dp"
            android:fontFamily="@font/merriweather_light"
            android:text="Angebot"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            andoroid:backgroundTint="@android:color/white"
            andoroid:iconTint="@android:color/black"
            andoroid:layout_constraintBottom_toBottomOf="parent"
            andoroid:layout_constraintEnd_toEndOf="parent"
            andoroid:layout_constraintTop_toBottomOf="@+id/imageView"
            andoroid:strokeColor="@android:color/black"
            andoroid:strokeWidth="2dp" />

        <ImageView
            android:id="@+id/bild"
            android:layout_width="369dp"
            android:layout_height="197dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.6"
            android:background="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="202dp"
            android:alpha="1"
            android:background="@color/white"
            android:fontFamily="@font/vollkorn"
            android:text="Nummer 1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/postDate"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="243dp"
            android:ems="10"
            android:inputType="date"
            android:hint="Datum"
            android:fontFamily="@font/vollkorn"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/postUsername"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="218dp"
            android:ems="10"
            android:fontFamily="@font/vollkorn"
            android:hint="Benutzername"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>